<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Biblioteca</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Página Inicial</a>
                    </li>
                    @if (Context.Session.GetString("LeitorId") == null)
                    {
                        <!-- Botões visíveis apenas para visitantes (não logados) -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Entrar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/SignUp">Registar</a>
                        </li>
                    }
                    else
                    {
                        <!-- Botões visíveis apenas para usuários logados -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Sair</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>